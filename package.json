{
  "name": "messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "dev": "vite --port 3000 --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "npm run build & npm run dev",
    "lint": "ESLINT_USE_FLAT_CONFIG=true npx eslint ./src --report-unused-disable-directives --max-warnings 0 && stylelint './src/*.scss' --max-warnings 0",
    "lint:fix": "npx eslint ./src --fix && stylelint './src/*.scss' --fix"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^8.1.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "globals": "^15.9.0",
    "sass": "^1.77.5",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0",
    "vite": "^5.2.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "express": "^4.19.2",
    "postcss-nested": "^6.0.1",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "overrides": {
    "eslint": "^8.57.0"
  }
}
