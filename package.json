{
  "name": "messenger",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "dev": "vite --port 3000 --host",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "npm run build & npm run dev",
    "lint": "ESLINT_USE_FLAT_CONFIG=true npx eslint ./src --report-unused-disable-directives --max-warnings 0 && npx stylelint 'src/**/*.scss' '!src/assets/**/*.scss' --max-warnings 0",
    "lint:fix": "npx eslint ./src --fix && npx stylelint 'src/**/*.scss' '!src/assets/**/*.scss' --fix",
    "test": "mocha",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@types/chai": "^4.3.9",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.8.7",
    "@types/sinon": "^10.0.20",
    "@typescript-eslint/parser": "^8.1.0",
    "chai": "^4.3.10",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-chai-friendly": "^1.0.1",
    "eslint-plugin-import": "^2.29.1",
    "global-jsdom": "^25.0.0",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "mocha": "^10.2.0",
    "node-fetch": "^3.3.2",
    "sass": "^1.77.5",
    "sinon": "^16.1.3",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0",
    "vite": "^5.2.0"
  },
  "dependencies": {
    "autoprefixer": "^10.4.19",
    "express": "^2.5.11",
    "postcss-nested": "^6.0.1",
    "stylelint-scss": "^6.5.1",
    "vite-plugin-handlebars": "^2.0.0"
  },
  "overrides": {
    "eslint": "^8.57.0"
  }
}
